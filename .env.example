# Crawler configuration
CHANNELS_FILE=/config/users.json
OUTPUT_DIR=/data/output/messages
BIOS_DIR=/data/output/bios
LOGS_DIR=/data/logs
META_DIR=/data/meta
CRAWL_INTERVAL_SECONDS=300
CUMULATIVE_JSON_ITERATIONS=-1

# Kafka configuration
KAFKA_BROKER=kafka:9092
KAFKA_TOPIC=Eitaa
USE_KAFKA=true

# Proxy configuration
REQUIRE_PROXIES=false
PROXY_REFRESH_INTERVAL=3600

# Logging
LOG_LEVEL=INFO
